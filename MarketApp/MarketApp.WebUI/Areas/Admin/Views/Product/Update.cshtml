@model MarketApp.Entities.Models.Product

<div class="col-md-8 offset-md-2">
    <div class="display-6">ÜRÜN EKLEME SAYFASI</div>
    <form asp-action="Update" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="ProductId"/>
        <div class="form-group my-2">
            <select asp-items="ViewBag.Categories" asp-for="CategoryId" class="form-control">Kategori Adı</select>
        </div>
        <div class="form-group my-2">
            <label asp-for="ProductName">Ürün Adı</label>
            <input asp-for="ProductName" class="form-control" />
        </div>
        <div class="form-group my-2">
            <label asp-for="Price">Fiyat</label>
            <input asp-for="Price" class="form-control" />
        </div>
        <div class="form-group my-2">
            <label asp-for="ImageUrl">Ürün Resmi</label>
            <input type="file" name="file" asp-for="ImageUrl" class="form-control" />
        </div>
        <button class="btn btn-primary">Kaydet</button>
    </form>
</div>